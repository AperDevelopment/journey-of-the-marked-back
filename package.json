{
  "name": "journey-of-the-marked-back",
  "version": "0.1.0",
  "description": "Le back du wiki officiel de Journey of the Marked",
  "scripts": {
    "dev": "nodemon",
    "start": "ts-node src/app.ts",
    "serve": "node dist/app.js",
    "build": "npx tsc",
    "test": "mocha --require ts-node/register 'test/**/*.spec.ts'",
    "test:unit": "mocha --require ts-node/register 'test/**/*.spec.ts' --ignore 'test/endpoints/*.spec.ts'",
    "test:endpoints": "mocha --require ts-node/register 'test/endpoints/*.spec.ts'",
    "coverage": "nyc npm run test"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.6.2"
  },
  "devDependencies": {
    "@types/chai": "^4.3.16",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/mocha": "^10.0.6",
    "@types/sinon": "^17.0.3",
    "@types/supertest": "^6.0.2",
    "chai": "^4.4.1",
    "dotenv": "^16.4.5",
    "mocha": "^10.4.0",
    "nodemon": "^3.1.0",
    "nyc": "^15.1.0",
    "sinon": "^18.0.0",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/models/*.ts",
      "src/routes/*.ts",
      "src/services/databaseService.ts"
    ]
  }
}
